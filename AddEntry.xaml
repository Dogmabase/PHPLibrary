<Window x:Class="PHP_Library.AddEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PHP_Library"
        mc:Ignorable="d"
        Title="Add PHP Entry" Height="550" Width="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="136*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label x:Name="lblDescription" Content="Description: " Margin="5" />
            <TextBox x:Name="txtDescription" Width="800" Height="50" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="100,5,5,5" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label x:Name="lblContent" Content="Content: " Margin="5" />
            <TextBox x:Name="txtContent" Width="800" Height="300" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="100,5,5,5" />
            <Button x:Name="btnSubmit" Width="100" Height="30" Content="Submit" HorizontalAlignment="Right" Margin="5,5,40,5" Click="btnSubmit_Click" />
        </StackPanel>

        

    </Grid>
</Window>
